<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".client"
    tools:layout_editor_absoluteY="25dp">

    <LinearLayout
        android:id="@+id/id_linerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/tb_IP"
                android:layout_width="354dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Введите IP полчателя"
                android:inputType="textPersonName"
                android:minHeight="48dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/tb_serverPORT"
                android:layout_width="354dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Введите PORT получателя"
                android:inputType="textPersonName"
                android:minHeight="48dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/tb_clientPORT"
                android:layout_width="229dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Введите PORT отправителя"
                android:inputType="textPersonName"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="234dp"
        android:layout_height="515dp"
        android:layout_below="@+id/id_linerLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"

        android:layout_marginTop="2dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="0dp"
        android:layout_toStartOf="@+id/id_linearLayoutCheckBox"
        tools:ignore="SpeakableTextPresentCheck">

        <TextView
            android:id="@+id/tb_Serverdata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Данные с сервера" />
    </ScrollView>

    <LinearLayout
        android:id="@+id/id_linearLayoutCheckBox"
        android:layout_width="174dp"
        android:layout_height="516dp"
        android:layout_below="@+id/id_linerLayout"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/chb_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Возраст создателя" />

    </LinearLayout>


</RelativeLayout>